brew tap osx-cross/arm
brew install x86_64-elf-gcc
curl -O https://ftp.gnu.org/gnu/grub/grub-2.06.tar.xz
tar -xf grub-2.06.tar.xz
cd grub-2.06
./configure --prefix=/usr/local --target=x86_64-elf --disable-werror TARGET_CC=x86_64-elf-gcc TARGET_OBJCOPY=x86_64-elf-objcopy TARGET_STRIP=x86_64-elf-strip TARGET_NM=x86_64-elf-nm TARGET_RANLIB=x86_64-elf-ranlib --enable-grub-install
make
sudo make install


#check
ls /usr/local/bin | grep grub
